<div class="container">
  <h2 class="pt-4"><%= @terrace.description %></h2>
  <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
  <div class="carousel-inner">
    <div class="carousel-item active">
      <img class="d-block w-100" src="<%= cl_image_path(@terrace.photos.first.key) %>" alt="First slide">
    </div>
    <div class="carousel-item">
      <img class="d-block w-100" src="<%= cl_image_path(@terrace.photos.second.key, :width => 400, :height => 100) %>" alt="Second slide">
    </div>
    <div class="carousel-item">
      <img class="d-block w-100" src="<%= cl_image_path(@terrace.photos.third.key, :width => 400, :height => 100) %>" alt="Third slide">
    </div>
  </div>
  <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>
  <h4><i class="fas fa-ruler"></i>  <%= @terrace.size %>m²</h4>
  <h4><i class="far fa-building"></i> <%= @terrace.floor %></h4>
  <h4>€ <%= @terrace.price %></h4>
</div>