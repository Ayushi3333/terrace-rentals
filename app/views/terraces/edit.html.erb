<div class="container mx-auto align-self-center w-50">
<%= simple_form_for(@terrace) do |t| %>
  <%= t.input :description %>
  <%= t.input :size %>
  <%= t.input :floor %>
  <%= t.input :price %>
  <%= t.input :address %>
  <%= t.input :photos, as: :file, input_html: { multiple: true } %>
  <%= t.submit "Update terrace", class: "btn btn-flat center-button" %>
<% end %>
</div>