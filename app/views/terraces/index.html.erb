<h3 class="ml-5">Rooftops near you</h3>
<div class="d-flex">
  <div class="container list-terrace mx-auto ml-5">
    <% @terraces.each do |terrace| %>
        <div class="card-terrace card-list mb-3 mx-4 mt-3">
            <div class="card-body-terrace ml-0 p-0 bg-white">
              <%= show_terrace_photo(terrace) %>
                <div class="pt-2 px-2">
                  <div class="d-flex justify-content-between align-items-end">
                    <p class="card-title"><%= link_to terrace.title, terrace_path(terrace), class:"link-color" %></p>
                    <p>€<%= terrace.price %></p>                  
                  </div>
                  <% if terrace.reviews.count == 0 %>
                    <p>No reviews yet</p>
                  <% else %>
                    <p><% terrace.rating.times do %><i class="fas fa-star text-primary"></i><% end %></p>
                  <% end %>
                  <p class="mb-1"><i class="fas fa-ruler"></i>  <%= terrace.size %>m²</p>
                </div>
            </div>
        </div>
    <% end %>
  </div>
  <div id="map" class="mt-3 index-map"
    style="width: 45%; height: 600px;"
    data-markers="<%= @markers.to_json %>"
    data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
</div>